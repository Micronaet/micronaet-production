<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!--Loop for report-->
    <template id="report_status_hour">
        <style type="text/css">
            body {
                color: #000 !important;
                }
            .border-black td {
                border-top: 1px solid black !important;
                }
            .table-condensed > thead > tr > th {
                border-bottom: 1px solid black !important;
                }
            .zero_min_height {
                min-height: 0px !important;
                }

            table, td {
                border: 1px solid #dfdfdf !important;
                background-color: #FFFFFF !important;
                font-family: Arial, sans-serif, Tahoma, Verdana;
                font-size: 10px;                 
                }
            table, th {
                border: 1px solid #dfdfdf !important;
                background-color: #6fb7ea !important;                 
                font-family: Arial, sans-serif, Tahoma, Verdana;
                font-size: 9px;
                }     
            
            .w30px {width: 30px;}
            .w100 {width: 100%;}
            .f_medium {
                font-size: 8px;
                background-color: #DDDDDD !important;
                }
            .right {
                text-align:right;
                }
            .center {
                text-align:center;
                }
            .left {
                text-align:left;
                }
            .even {}
            .odd {}            
            .total {
                font-size: 9px;          
                font-weight: bold;  
                padding: 4px;
                background-color: #f6cf3b !important;
                }
                            
        </style>
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <t t-if="startup()">
                   <!-- Start loop product and material status: -->
                     <table>                     
                         <!-- HEADER 
                         <thead>
                             <tr>
                                 <t t-set="get_cols" t-value="get_cols()"/>
                                 <th class="text-left w30px">Linee</th>                                 
                                 <t t-foreach="get_cols" t-as="col">
                                     <th class="text-center"><t t-esc="col[3:5]"/>-<t t-esc="col[0:2]"/></th>
                                 </t>
                             </tr>
                         </thead>-->
                         
                         <!-- BODY -->
                         <tbody>
                             <t t-foreach="get_rows()" t-as="row">
                                 <!--First col:-->
                                 <tr><td><t t-esc="row"></td>                             
                                     <t t-foreach="get_cols()" t-as="col">
                                         <td class="text-center"><t t-esc="get_cell(col, row)"/></td>
                                     </t><!--for cols-->                                     
                                 </tr>
                             </t><!--for rows-->
                         </tbody>
                     </table>
                </t>
            </div>
        </t>
    </template>    

    <!--Create action report-->
    <report
        string="Production Grid"
        id="action_report_production_grid"
        model="mrp.production"
        report_type="qweb-pdf"
        name="production_grid_report.report_production_grid"
        file="production_grid_report.report_production_grid"
        />

    <!--Setup page format:-->
    <record id="paperformat_production_grid" model="report.paperformat">
        <field name="name">Production Grid format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">80</field>
    </record>    

    <!--Currently cannot declared directly in report, so:-->
    <record id="action_report_production_grid" model="ir.actions.report.xml">
        <field name="paperformat_id" ref="paperformat_production_grid"/>
    </record>
  </data>
</openerp>
